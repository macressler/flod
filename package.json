{
  "name": "flod",
  "description": "Node.js Web Framework benchmarking tool",
  "preferGlobal": true,
  "version": "0.3.0",
  "author": "Van Nguyen <thegoleffect@gmail.com>",
  "repository": "git://github.com/spumko/flod",
  "engines": {
    "node": "0.8.x"
  },
  "dependencies": {
    "async": ">= 0.2.0",
    "docopt": ">= 0.4.0",
    "hapi": "1.x.x",
    "joi": "0.3.x",
    "request": "2.x.x",
    "underscore": "1.4.x",
    "semver": "~1.1.4",
    "hoek": "~0.9.1",
    "easy-table": "~0.2.0"
  },
  "devDependencies": {
    "lab": "0.1.x",
    "chai": "1.x.x",
    "blanket": "1.0.x",
    "travis-cov": "0.2.x"
  },
  "bin": {
    "flod": "./bin/flod"
  },
  "scripts": {
    "test": "make test && make test-cov",
    "blanket": {
      "pattern": "//^((?!/node_modules/)(?!/test/).)*$/ig",
      "onlyCwd": true,
      "data-cover-flags": {
        "branchTracking": true
      }
    },
    "travis-cov": {
      "threshold": 100
    }
  },
  "licenses": [
    {
      "type": "BSD",
      "url": "http://github.com/spumko/flod/raw/master/LICENSE"
    }
  ]
}
